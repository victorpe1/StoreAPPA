<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuOpcionActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"

        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnCliente"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Logo"
                android:scaleType="fitXY"
                android:src="@drawable/cliente" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GESTION CLIENTE"
                android:textAlignment="center"
                android:textColor="#EF1F1F"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnProducto"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Logo"
                android:scaleType="fitXY"
                android:src="@drawable/producto"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GESTION PRODUCTO"
                android:textAlignment="center"
                android:textColor="#EF1F1F"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="540dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnPedido"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Logo"

                android:scaleType="fitXY"
                android:src="@drawable/pedido" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GESTION PEDIDOS"
                android:textAlignment="center"
                android:textColor="#EF1F1F"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnEmpleado"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Logo"
                android:scaleType="fitXY"
                android:src="@drawable/empleado" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GESTION EMPLEADO"
                android:textAlignment="center"
                android:textColor="#EF1F1F"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>